extends layout

block body
  article
    if month
      .publish-date
        span.date-year
          a(href='/archives/#{year}.html') #{year}
        span.date-month
          a(href='/archives/#{year}-#{month}.html') #{month}
    else if year
      .publish-date
        span.date-year
          a(href='/archives/#{year}.html') #{year}
    ul
      each post in posts
        li
          a(href="#{post.url}") #{post.title}
